$ORIGIN {{ reverse_ip }}.in-addr.arpa.   ; Zone starting point in the namespace tree
                                         ; (if skipped, the origin is inferred by the DNS server
                                         ; based on zone declaration in name.conf.local file
$TTL         15M                         ; Default expiration time for all resources
@            IN          SOA      ns1.{{ hostname }}.{{ domain_name }}. root.{{ hostname }}.{{ domain_name }} (
             {{ zone_serial }}           ; serial
             15M                         ; refresh every 15 minutes
              5M                         ; retry every 5 minutes
          604800                         ; expire 7 days = 604800 seconds
             600)                        ; negative cache TTL
@             IN         PTR       ns1.{{ hostname }}.{{ domain_name }}.     ; name server for b98041.sa.cs.ut.ee
1             IN         PTR       ns1.{{ hostname }}.{{ domain_name }}.     ; 172.17.90.1 has name ns.b98041.sa.cs.ut.ee
5             IN         PTR       myhost.{{ hostname }}.{{ domain_name }}.  ; 172.17.90.5 has name myhost.b98041.sa.cs.ut.ee
6             IN         PTR       mail.{{ hostname }}.{{ domain_name }}.    ; 172.17.90.6 has name mail.b98041.sa.cs.ut.ee
7             IN         PTR       myhost2.{{ hostname }}.{{ domain_name }}. ; 172.17.90.7 has name myhost2.b98041.sa.cs.ut.ee
